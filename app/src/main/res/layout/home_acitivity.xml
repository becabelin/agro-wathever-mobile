<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Profile" />

    </RelativeLayout>

    <!-- Blog Section -->
    <TextView
        android:id="@+id/blogTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blog"
        android:textSize="24sp"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/blogCardsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogTitleTextView"
        android:orientation="vertical">

        <!-- Card 1 -->
        <LinearLayout
            android:id="@+id/card1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card1ImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blog_image1"
                android:contentDescription="Blog Image 1" />

            <TextView
                android:id="@+id/card1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card 1"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Card 2 -->
        <LinearLayout
            android:id="@+id/card2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card2ImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blog_image2"
                android:contentDescription="Blog Image 2" />

            <TextView
                android:id="@+id/card2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card 2"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Card 3 -->
        <LinearLayout
            android:id="@+id/card3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card3ImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blog_image3"
                android:contentDescription="Blog Image 3" />

            <TextView
                android:id="@+id/card3TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card 3"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Chat Section -->
    <TextView
        android:id="@+id/chatTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="24sp"
        android:layout_below="@id/blogCardsLayout"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Chat"
        android:layout_below="@id/chatTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
